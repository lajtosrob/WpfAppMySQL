<Window x:Class="WpfAppMySQL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppMySQL"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="dgRekordok"
                  Margin="5"
                  Background="LemonChiffon"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <Label Content="Kérem adja meg a kategóriát!"/>
            <TextBox x:Name="txtKategoria" Width="120"
                 Background="LightGreen"/>
            <Button x:Name="btnBetolt" 
                Content="Betöltés" Click="btnBetolt_Click"/>
        </StackPanel>

    </Grid>
</Window>
